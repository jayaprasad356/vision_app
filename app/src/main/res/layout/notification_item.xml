<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_list_bg"
        android:backgroundTint="@color/grayLightColor"
        android:paddingVertical="@dimen/_14sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle"
            />

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle"
            />

        <RelativeLayout
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:layout_gravity="right"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_14sdp"
            />

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_14sdp"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Transfer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/newvoliet"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_notify_new"
                    android:drawableTint="@color/newpink"
                    android:drawablePadding="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successfull"
                    android:textColor="#404B52"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_28sdp"/>

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01-11-2000 09:03:23"
                    android:textColor="#404B52"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_28sdp"
                    />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/btn_bg"
                android:padding="0dp"
                android:textColor="@color/white"
                android:id="@+id/btnOpen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:text="Open"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:layout_gravity="end|bottom"/>

        </LinearLayout>







    </androidx.cardview.widget.CardView>


</LinearLayout>