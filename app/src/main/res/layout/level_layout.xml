<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginHorizontal="@dimen/_1sdp"
    android:layout_weight="1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvLevel"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/grey"
        >


        <LinearLayout
            android:background="@drawable/shape_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textSize="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/_16sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get"
                android:textSize="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.17"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/newpink"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For 100 Audio"
                android:layout_gravity="center"
                android:textSize="@dimen/_5sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tvExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For 100 Codes"
                android:layout_gravity="center"
                android:textSize="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tvTrynow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:text="Try Now"
                android:visibility="gone"
                android:textColor="@color/white"
                android:padding="@dimen/_1sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/green_500"
                android:textSize="@dimen/_4sdp"/>


        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>