<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GenrateQRActivity"
    android:background="@drawable/bg"
    >

    <RelativeLayout
        android:layout_above="@+id/ivQrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp"
        >


        <androidx.cardview.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_60sdp">


            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/app_logo"
                android:scaleType="fitXY"
                />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <ImageView
        android:id="@+id/ivQrcode"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/qrcode" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivQrcode"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text="Code Generated successfully"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvReferEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="Refer And Earn Rs. 720 Instantly"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />



    <ImageView
        android:layout_below="@+id/tvReferEarn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/refer_earn"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />

</RelativeLayout>