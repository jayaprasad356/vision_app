<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    android:background="@drawable/bg">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:text="@string/app_name"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_notifications_24"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primaryColor"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke2"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/lTrial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDemoVideo"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:backgroundTint="@color/secondaryLightColor"
                                android:text="Watch Demo Video"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="gone"
                                app:iconSize="@dimen/_8sdp"
                                app:iconTint="@color/white" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_gravity="center_horizontal">

                                    <com.google.android.material.progressindicator.CircularProgressIndicator
                                        android:id="@+id/cbTrail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center_horizontal"
                                        app:indicatorColor="@color/secondaryColor"
                                        app:indicatorSize="@dimen/_40sdp"
                                        app:trackColor="@color/white"
                                        app:trackCornerRadius="@dimen/_12sdp"
                                        app:trackThickness="@dimen/_6sdp" />

                                    <ImageView
                                        android:id="@+id/ivInfo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/info" />


                                </RelativeLayout>

                                <Button
                                    android:id="@+id/btnBuyServer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/secondaryColor"
                                    android:text="Purchase Database"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lSurvey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/cbCodes"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    app:indicatorColor="@color/secondaryColor"
                                    app:indicatorSize="@dimen/_80sdp"
                                    app:trackColor="@color/white"
                                    app:trackCornerRadius="@dimen/_12sdp"
                                    app:trackThickness="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvCodes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnsyncNow"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/syncbg_disabled"
                                android:enabled="false"
                                android:text="Sync Now"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_10sdp"
                                app:backgroundTint="@null" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/box"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Wallet Balance"
                                        android:textColor="@color/primaryColor"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvBalance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/primaryColor"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold"
                                        tools:text="0" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/shareLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvShareEarnings"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="@string/shrYourEarning"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_7sdp" />

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        app:cardCornerRadius="@dimen/_4sdp">


                                        <ImageButton
                                            android:id="@+id/sharebtn"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="right"
                                            android:layout_margin="@dimen/_4sdp"
                                            android:background="@drawable/vp_ic_share_white"
                                            android:backgroundTint="@color/green" />

                                    </com.google.android.material.card.MaterialCardView>


                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="0.8"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="Today Codes "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="Total Codes "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity=""
                                        android:text="History Days "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity=""
                                        android:text="Level"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvTodayCodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvTotalCodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />


                                    <TextView
                                        android:id="@+id/tvHistorydays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvLevels"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>


                            </LinearLayout>

                            <Button
                                android:id="@+id/btnFindMissing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:backgroundTint="@color/yellow"
                                android:text="Find Missing"
                                android:textAllCaps="false"
                                android:visibility="gone" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/level_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/background2"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Daily Wallet"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="No Refers"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDailyBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="₹ 0"
                                android:textColor="@color/secondaryGreenColor"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/addToDailyWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primaryLightColor"
                                android:text="Add to Main Balance"
                                android:textSize="@dimen/_6sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/background2"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Monthly Wallet"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTargerrefers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1 Refer"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvMonthlyBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="₹ 0"
                                android:textColor="@color/secondaryGreenColor"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/addToMonthlyWallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primaryLightColor"
                                android:text="Add to Main Balance"
                                android:textSize="@dimen/_6sdp" />


                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:visibility="gone"

                        >


                        <TextView
                            android:id="@+id/tvRegularTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_14sdp"
                            android:drawableLeft="@drawable/ic_arrow_back"
                            android:drawablePadding="@dimen/_4sdp"
                            android:gravity="center_vertical"
                            android:text="Regular Task"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvLevelhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:text="click here \nTry level 2 "
                            android:textColor="@color/green_100"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:visibility="invisible" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llNumberCodes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical"

                        >


                        <LinearLayout
                            android:id="@+id/root_otp_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/otp_edit_box1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box3"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box5"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box6"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box7"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box8"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box9"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box10"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:enabled="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/ed_bg"
                            android:enabled="false"
                            android:hint="Enter Name"
                            android:longClickable="false"
                            android:padding="@dimen/_10sdp"
                            android:text="Tamil"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btnSearchName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:backgroundTint="@color/primaryLightColor"
                            android:gravity="center"
                            android:text="Search\nName"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnVerifyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:backgroundTint="@color/primaryLightColor"
                            android:gravity="center"
                            android:text="Verify"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llCityLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/edCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter City location"
                            android:inputType="textVisiblePassword"
                            android:longClickable="false"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"

                            />

                        <Button
                            android:id="@+id/btnVerfifyCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
