<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.PurchaseServerActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:padding="@dimen/_14sdp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase Server"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/buy_server"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnWhatapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"

        android:layout_marginHorizontal="80dp"
        android:drawablePadding="8dp"
        android:text="WhatsApp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:iconGravity="textStart"
        app:icon="@drawable/baseline_chat_24"
        android:backgroundTint="@color/whatsapp_primary_color"
        />

</LinearLayout>

</RelativeLayout>