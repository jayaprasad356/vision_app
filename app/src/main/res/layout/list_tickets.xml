<?xml version="1.0" encoding="utf-8"?>
<com.app.abcdapp.chat.views.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/grey_600"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleRoundedCorners="@dimen/padding10"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/padding50"
            android:layout_height="@dimen/padding50"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/circle_my_selector"
            android:src="@drawable/profile_avatar"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/padding1"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textSize="10dp" />




        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding10"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/strUsername"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_sixteen" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/strUsername"
                    android:textAlignment="viewStart"
                    android:textColor="@color/yellow_900"
                    android:textSize="@dimen/font_sixteen"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:text="@string/strUsername"
                    android:textColor="@color/greyText"
                    android:textSize="@dimen/font_twelve"
                    android:visibility="visible" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Payment Issue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>
        </LinearLayout>





    </RelativeLayout>

</com.app.abcdapp.chat.views.MaterialRippleLayout>
